<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Profile Image and Exit Icon Section with Black Background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="67dp"
            android:layout_height="68dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Exit Icon -->

        <!-- Name Text Below Profile Picture -->

        <ImageView
            android:id="@+id/exit_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ehsen Nawaz"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/profile_image" />

        <!-- Email Text Below Name -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="nawazehsen@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- List Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_section">

        <!-- Boards Section -->
        <LinearLayout
            android:id="@+id/boards_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/boards_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_board"/>

            <TextView
                android:id="@+id/tv_boards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Boards"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Cards Section -->
        <LinearLayout
            android:id="@+id/cards_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boards_section"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/cards_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_card"/>

            <TextView
                android:id="@+id/tv_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="My Cards"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:id="@+id/settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cards_section"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_settings"/>

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginLeft="16dp"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Help Section -->
        <LinearLayout
            android:id="@+id/help_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_section"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_help"/>

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>